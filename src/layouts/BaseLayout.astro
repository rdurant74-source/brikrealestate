---
const {
  title = "BRIK Real Estate",
  description = "Build your next move, BRIK by BRIK.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      :root{
        --bg:#0b0d10;
        --text:#e9eef5;
        --muted:#b7c0cc;
        --line:rgba(255,255,255,.10);
        --accent:#2f6bff;
      }
      *{box-sizing:border-box}
      body{
        margin:0;
        font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Arial;
        background:
          radial-gradient(1200px 600px at 20% 0%, rgba(47,107,255,.25), transparent 55%),
          radial-gradient(900px 500px at 80% 10%, rgba(255,255,255,.08), transparent 55%),
          var(--bg);
        color:var(--text);
      }
      a{color:inherit;text-decoration:none}
      .container{max-width:1100px;margin:0 auto;padding:24px}
      .nav{
        display:flex;
        align-items:center;
        justify-content:space-between;
        padding:14px 0;
        border-bottom:1px solid var(--line);
      }
      .brand{display:flex;gap:10px;align-items:center}
      .logo{
        width:34px;height:34px;border-radius:10px;
        background:linear-gradient(135deg, rgba(47,107,255,.95), rgba(47,107,255,.35));
        display:grid;place-items:center;font-weight:800;
      }
      .navlinks{display:flex;gap:10px;flex-wrap:wrap}
      .pill{
        padding:10px 14px;
        border:1px solid var(--line);
        border-radius:999px;
        background:rgba(255,255,255,.03);
      }
      .pill.primary{
        border-color:rgba(47,107,255,.55);
        background:rgba(47,107,255,.16);
      }
      .card{
        border:1px solid var(--line);
        border-radius:18px;
        background:rgba(17,21,27,.75);
        padding:18px;
      }
      footer{
        margin-top:28px;
        padding:22px 0;
        border-top:1px solid var(--line);
        color:var(--muted);
        font-size:12px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="nav">
        <a class="brand" href="/">
          <div class="logo">B</div>
          <div>
            <strong>BRIK Real Estate</strong><br />
            <small style="color:var(--muted)">BRIK by BRIK</small>
          </div>
        </a>
        <div class="navlinks">
          <a class="pill" href="/start">Start</a>
          <a class="pill" href="/education">Education</a><a class="pill" href="/glossary">Glossary</a>

          <a class="pill" href="/market-intel">GA Intel</a>
          <a class="pill primary" href="/intake">Intake</a>
          <a class="pill" href="/about">About</a>
        </div>
      </div>

      <main>
        <slot />
      </main>

      <footer>
        <div><strong>Powered by CJ Property Solutions LLC</strong></div>
        <div>Educational content only. Not legal or financial advice.</div>
      </footer>
    </div>
  </body>
</html>
